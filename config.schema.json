{
    "pluginAlias": "ISY",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "Homebridge Plugin for ISY Series of Controllers from Universal Devices, Inc.",
    "schema": {
       "type": "object",
       "definitions": {
           "DeviceConfig": {
               "properties": {
                   "address": {
                       "type": "string"
                   },
                   "ignore": {
                       "type": "boolean"
                   },
                   "mapping": {
                       "$ref": "#/definitions/DeviceServiceMapping"
                   },
                   "name": {
                       "type": "string"
                   },
                   "triggers": {
                       "items": {
                           "$ref": "#/definitions/DevicePropertyTrigger"
                       },
                       "type": "array"
                   },
                   "typeCode": {
                       "type": "string"
                   }
               },
               "type": "object"
           },
           "DevicePropertyTrigger": {
               "properties": {
                   "property": {
                       "type": "string"
                   },
                   "target": {
                       "properties": {
                           "address": {
                               "type": "string"
                           },
                           "command": {
                               "type": "string"
                           },
                           "name": {
                               "type": "string"
                           }
                       },
                       "type": "object"
                   },
                   "value": {
                       "type": "string"
                   }
               },
               "type": "object"
           },
           "DeviceServiceMapping": {
               "properties": {
                   "properties": {
                       "items": {
                           "$ref": "#/definitions/PropertyCharacteristicMapping"
                       },
                       "type": "array"
                   },
                   "service": {
                       "type": "string"
                   }
               },
               "type": "object"
           },
           "GlobalRenameRule": {
               "properties": {
                   "remove": {
                       "items": {
                           "type": "string"
                       },
                       "type": "array"
                   },
                   "replace": {
                       "items": {
                           "properties": {
                               "replace": {
                                   "type": "string"
                               },
                               "with": {
                                   "type": "string"
                               }
                           },
                           "type": "object"
                       },
                       "type": "array"
                   }
               },
               "type": "object"
           },
           "IgnoreDeviceRule": {
               "properties": {
                   "address": {
                       "type": "string"
                   },
                   "family": {
                       "type": [
                           "string",
                           "number"
                       ]
                   },
                   "folder": {
                       "type": "string"
                   },
                   "lastAddressDigit": {
                       "type": "number"
                   },
                   "nameContains": {
                       "type": "string"
                   },
                   "nodeDef": {
                       "type": "string"
                   },
                   "typeCode": {
                       "type": "string"
                   }
               },
               "type": "object"
           },
           "PropertyCharacteristicMapping": {
               "properties": {
                   "property": {
                       "type": "string"
                   },
                   "service": {
                       "type": "string"
                   },
                   "characteristic": {
                       "type": "string"
                   }
               },
               "type": "object"
           },
           "RenameDeviceRule": {
               "properties": {
                   "address": {
                       "type": "string"
                   },
                   "name": {
                       "type": "string"
                   },
                   "newName": {
                       "type": "string"
                   }
               },
               "type": "object"
           }
       },
       "properties": {
           "name": {
               "title": "Name",
               "type": "string",
               "required": true,
               "default": "ISY"
           },
           "host": {
               "title": "IP/Hostname of ISY",
               "type": "string",
               "format": "hostname",
               "required": true
           },
           "useHttps": {
               "title": "Use HTTPS",
               "type": "boolean"

           },
           "username": {
               "type": "string"
           },
           "password": {
               "type": "string"
           },
           "debugLoggingEnabled": {
               "type": "boolean"
           },
           "deviceConfigs": {
               "items": {
                   "$ref": "#/definitions/DeviceConfig"
               },
               "type": "array"
           },
           "elkEnabled": {
               "title": "Enable Elk Devices",
               "type": "boolean"
           },

           "ignoreDevices": {
               "items": {
                   "$ref": "#/definitions/IgnoreDeviceRule"
               },
               "type": "array"
           },
           "includeAllScenes": {
               "title": "Include All Scenes",
               "type": "boolean"
           },
           "renameDevices": {
               "items": {
                   "$ref": "#/definitions/RenameDeviceRule"
               },
               "type": "array"
           },
           "transformNames": {
               "$ref": "#/definitions/GlobalRenameRule"
           },
           "platform": {
               "type": "string"
           }

       }

   },
   "layout": [
       "name",
       "host",
       {
           "type": "flex",
           "flex-flow": "row wrap",
           "items": [
               "username",
               {
                   "key": "password",
                   "type": "password"
               }
           ]
       }, "elkEnabled", "includeAllScenes",
       {
           "type": "fieldset",
           "title": "Optional Settings",
           "expandable": true,
           "expanded": false,
           "items": "ignoreDevices"
       }
   ],
   "data": {
